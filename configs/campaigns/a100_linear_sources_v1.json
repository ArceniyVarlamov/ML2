{
  "name": "a100_linear_sources_v1",
  "description": "Linear/GLM baseline source family for orthogonal signal (quality-first).",
  "workdir": "../..",
  "log_dir": "artifacts_campaigns/a100_linear_sources_v1",
  "env": {
    "OMP_NUM_THREADS": "8",
    "MKL_NUM_THREADS": "8",
    "NUMEXPR_NUM_THREADS": "8"
  },
  "tasks": [
    {
      "id": "linear_write_meta",
      "cmd": "./.venv/bin/python scripts/linear_source.py --config configs/linear/top1_a100_hlinear_sgd_v1.json write-meta",
      "done_if_all_exist": [
        "artifacts_hlinear_sgd_a100_v1/meta/columns.json",
        "artifacts_hlinear_sgd_a100_v1/meta/fold_ids.npy"
      ]
    },
    {
      "id": "linear_run_bases",
      "cmd": "./.venv/bin/python scripts/linear_source.py --config configs/linear/top1_a100_hlinear_sgd_v1.json run-bases",
      "done_if_all_exist": [
        "artifacts_hlinear_sgd_a100_v1/base/linear_oof.parquet",
        "artifacts_hlinear_sgd_a100_v1/scores/linear_scores.json"
      ]
    },
    {
      "id": "linear_blend",
      "cmd": "./.venv/bin/python scripts/linear_source.py --config configs/linear/top1_a100_hlinear_sgd_v1.json blend --models linear",
      "done_if_all_exist": [
        "artifacts_hlinear_sgd_a100_v1/ensemble/blend_oof.parquet",
        "artifacts_hlinear_sgd_a100_v1/scores/blend_scores.json"
      ]
    }
  ]
}
